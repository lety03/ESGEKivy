        text_color: app.theme_cls.primary_color
        pos_hint:{'center_y': .08, 'center_x': 0.11}
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = 'home'
    MDIconButton:
        text: 'Ver items'
        icon: 'refresh'
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        pos_hint:{'center_y': .92, 'center_x': 0.08}
        on_release:
            root.ExibirItems()

<BuscarProdutoWindow>:
    FloatLayout:
        BoxLayout:
            orientation:'vertical'
            pos_hint:{'center_y': .899}
            Label:
                text:'Busca de items'
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: .05
            size_hint_x: .89
            pos_hint:{'center_y': .799, 'center_x': .53}
            TextInput:
                id:itemBusca
                size_hint_y: None
                size: '30dp', '30dp'
            MDIconButton:
                icon: 'store-search'
                on_press:
                    root.LimparGrid()
                on_release:
                    root.ExibirProduto()  

        MDIconButton:
            icon: 'arrow-u-left-top-bold'
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            # size_hint: .1, .2
            index: 1
            # pos_hint:{'center_y': .08, 'center_x': .06}
            pos_hint:{'center_y': .15, 'center_x': .11}
            on_press:
                root.LimparGrid()
            on_release: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'AlterarProduto'

